<h1 class='mb-1 restaurant-show-title'>{{selectedRestaurant.name}}</h1>
<div class='container'>
  <div class='row'>
    <div class='col-12 col-md-10 mx-auto'>

      <p class='mb-1'>
        <span class='text-secondary'>
          <i class='fas fa-utensils pr-2'></i>
          類別：
        </span>
        {{selectedRestaurant.category}}
      </p>

      <p class='mb-1'>
        <span class='text-secondary'>
          <i class='fas fa-map-marker-alt pr-2'></i>
          地址：
        </span>
        {{selectedRestaurant.location}}
        <a href={{selectedRestaurant.google_map}} class='text-secondary' target='_blank'>
          <i class='fas fa-location-arrow pr-2 fa-xs'></i>
        </a>
      </p>

      <p class='mb-1'>
        <span class='text-secondary'>
          <i class='fas fa-mobile-alt pr-2'></i>
          電話：
        </span>
        {{selectedRestaurant.phone}}
      </p>

      <p class='mb-5'>
        {{selectedRestaurant.description}}
      </p>

      <img
        class='rounded mx-auto d-block mb-4 w-100'
        src={{selectedRestaurant.image}}
        alt={{selectedRestaurant.name}}
        style='max-width: 600px;'
      />
      <div style='display:flex; justify-content: center;'>
        <a href='/' class='btn btn-primary mx-2'>Back to Homepage</a>
        <a href='/Restaurant/{{selectedRestaurant._id}}/edit' class='btn btn-primary'>edit</a>
        <form action='/Restaurant/{{selectedRestaurant._id}}/delete' method='POST' style=''>
          <button type='submit' class='btn btn-danger'>delete</button>
        </form>
      </div>
    </div>
  </div>
</div>