<!-- search bar -->
<div class='container search-bar'>
  <div class='search-bar-outer'>
    <div class='search-bar-inner'>
      <form action='/search'>
        <h4 class='mb-2'>尋找餐廳：</h4>
        <div class='input-group'>
          <input
            type='text'
            name='keyword'
            class='form-control'
            id='search-input'
            placeholder='輸入餐廳、分類'
            aria-label='Restaurant Name...'
            value='{{keyword}}'
            aria-describedby='search-button'
          />
          <div class='input-group-append'>
            <button class='btn btn-major' type='submit' id='search-button'><i class='fas fa-search'></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class='container mt-5'>
  <div class='row'>
    <div class='col-md-10 col-12 mx-auto'>
      <div class='card-columns'>
        {{#each restaurants}}
          {{#with this}}
            <div class='card'>
              <a href='/restaurants/{{_id}}' class='text-secondary'>
                <div class='card mb-0'>
                  <img class='card-img-top' src={{image}} alt={{name}} />
                  <div class='card-body p-3'>
                    <h6 class='card-title mb-1'>{{name}}</h6>

                    <div class='restaurant-category mb-1'>
                      <i class='fas fa-utensils pr-2'></i>
                      {{category}}
                    </div>

                    <span class='badge-pill badge-danger font-weight-normal'>
                      {{rating}}
                      <i class='fas fa-star fa-xs'></i>
                    </span>

                  </div>
                </div>
              </a>
              <div class='card-footer mb-1'>
                <a href='/updateRestaurant/{{_id}}' class='btn btn-success btn-sm'>edit</a>
                <a href='/restaurants/{{_id}}' class='btn btn-info btn-sm'>detail</a>
                <form action='/deleteRestaurant/{{_id}}' method='POST' style='margin:0px'>
                  <button type='submit' class='btn btn-danger btn-sm'>delete</button>
                </form>
              </div>
            </div>

          {{/with}}
        {{/each}}
      </div>
    </div>
  </div>
</div>